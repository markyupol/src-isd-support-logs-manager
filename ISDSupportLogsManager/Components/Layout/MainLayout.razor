@inherits LayoutComponentBase

<RadzenComponents @rendermode="InteractiveAuto" />

<div class="container-fluid p-0">
    <header class="navbar navbar-expand-lg bg-white border-bottom" style="min-height: 54px;">
        <div class="container-fluid d-flex justify-content-between align-items-center" style="padding: 0;">
            <!-- List -->
            <div class="d-flex align-items-center me-3">
                <a href="#" class="text-dark d-flex align-items-center" style="text-decoration: none;">
                    <img src="https://img.icons8.com/ios-filled/40/list.png" alt="List Icon" style="width: 16px; height: 16px;" class="me-2">
                    <span>List</span>
                </a>
            </div>
            <!-- Title -->
            <div class="dropdown d-flex justify-content-center" style="margin: 0;">
                <button class="btn dropdown-toggle custom-dropdown-btn" type="button" id="customDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <!-- Title -->
                    <div class="d-flex flex-column align-items-center flex-grow-1">
                        <div class="d-flex align-items-center">
                            <img src="https://img.icons8.com/color/48/drawer.png" alt="Icon" style="width: 30px; height: 30px;" class="me-2">
                            <div class="d-flex flex-column align-items-start">
                                <span class="navbar-brand mb-0 h6" style="font-size: 1rem; line-height: 1; margin-top: 0; padding-top: 0;">
                                    TPC Support Logs
                                </span>
                                <div class="badge bg-success text-light rounded-pill" style="padding: 3px 10px; font-size: 0.5rem; margin-top: 0;">
                                    Version 1.0.0.0 - LIVE
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Dropdown Arrow -->
                    <span class="ms-2">
                        <i class="bi bi-chevron-down"></i>
                    </span>
                </button>
                <ul class="dropdown-menu shadow-lg" aria-labelledby="customDropdown" style="left: 50%; transform: translateX(-50%); background-color: white; border: none; padding-top: 10px; margin-top: 5px; width: 250px;">
                    <!-- Group Label -->
                    <li class="dropdown-header">Group 1</li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <i class="bi bi-person-fill me-2"></i> Profile
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <i class="bi bi-gear-fill me-2"></i> Settings
                        </a>
                    </li>

                    <!-- Group Label -->
                    <li class="dropdown-header">Group 2</li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Profile -->
            <div class="d-flex align-items-center ms-3">
                <img src="https://img.icons8.com/fluency/48/test-account--v1.png" alt="User" style="width: 24px; height: 24px;" class="rounded-circle me-2" />
                <a class="text-dark dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none;">
                    Juan Dela Cruz
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#">Logout</a></li>
                </ul>
            </div>
        </div>
    </header>
    <div class="d-flex container-fluid" style="min-height: 100vh;">
        <!-- Left Sidebar -->
        <div class="border-end" style="background-color: #f8f8f8; width: 300px;">

@inherits LayoutComponentBase

<RadzenComponents @rendermode="InteractiveAuto"/>

<div style="padding: 0;">
    @* TOP HEADER *@
    <header class="navbar navbar-expand-lg bg-white border-bottom" style="margin: 0; left: 0; right: 0;">
        <div class="container-fluid d-flex justify-content-between align-items-center" style="padding: 0;">
            <!-- List -->
            <div class="d-flex align-items-center ms-1">
                <a href="#" class="text-dark d-flex align-items-center" style="text-decoration: none;">
                    <img src="logos/tdk-logo-tiny.png" alt="List Icon" style="width: auto; height: 16px;" class="me-1">
                </a>
            </div>
            <!-- Title -->
            <div class="d-flex justify-content-center ms-2">
                <button class="btn dropdown-toggle custom-dropdown-btn" type="button" id="customDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 0;">
                    <div class="d-flex align-items-center">
                        <img src="https://img.icons8.com/color/48/drawer.png" alt="Icon" style="width: 30px; height: 30px;" class="me-2">
                        <div class="d-flex flex-column align-items-start">
                            <span class="navbar-brand mb-0 h6" style="font-size: 0.9rem; line-height: 1; margin: 0; padding: 0;">
                                <!-- Removed margin -->
                                TPC Support Logs
                            </span>
                            <div class="badge bg-success text-light rounded-pill" style="padding: 3px 7px; font-size: 0.6rem; margin-top: 5px;">
                                <!-- Optional: Adjust margin-top -->
                                Version 1.0.0.0 - LIVE
                            </div>
                        </div>
                    </div>
                    <span class="ms-2">
                        <i class="bi bi-chevron-down"></i>
                    </span>
                </button>
                <!-- Dropdown Menu -->
                <ul class="dropdown-menu shadow-lg p-1" aria-labelledby="customDropdown" style="left: 50%; transform: translateX(-50%); background-color: white; border: none; margin-top: 0; width: 250px;">
                    <!-- Group Label -->
                    <li class="dropdown-header" style="font-weight: bold;">General</li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-person-fill"></i> Support List
                        </a>
                    </li>
                    <!-- Group Label -->
                    <li class="dropdown-header" style="font-weight: bold;">Maintenance</li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-box-arrow-right"></i> Business Areas
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-box-arrow-right"></i> Departments
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-box-arrow-right"></i> Categories
                        </a>
                    </li>
                </ul>
            </div>
            <!-- Profile -->
            <div class="d-flex align-items-end ms-3">
                <button class="btn dropdown-toggle custom-dropdown-btn" type="button" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 0;">
                    <div class="d-flex align-items-center">
                        <div class="d-flex flex-column align-items-end">
                            <span class="navbar-brand mb-0 h6" style="font-size: 0.7rem; line-height: 1; margin: 0; padding: 0;">
                                <!-- Removed margin -->
                                Juan Dela Cruz
                            </span>
                            <div class="badge bg-success text-light rounded-pill" style="padding: 3px 7px; font-size: 0.6rem; margin-top: 5px;">
                                <!-- Optional: Adjust margin-top -->
                                Standard User
                            </div>
                        </div>
                        <img src="https://img.icons8.com/fluency/48/test-account--v1.png" alt="Icon" style="width: 30px; height: 30px;">
                    </div>
                    <span class="ms-1">
                        <i class="bi bi-chevron-down"></i>
                    </span>
                </button>
                <ul class="dropdown-menu shadow-lg p-1" aria-labelledby="profileDropdown" style="right: 0; left: auto; transform: none;">
                    <!-- Group Label -->
                    <li class="dropdown-header" style="padding: 0.5rem 1rem; font-weight: bold;">General</li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" href="#" style="padding: 0.5rem 1rem;">
                            <i class="bi bi-person-fill me-2"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    @* BODY *@
    <div style="background-color: red; display: grid; grid-template-columns: 200px 1fr 200px; height:100vh;">
        <div style="background-color: burlywood;">&nbsp;</div>
        <div style="background-color: pink;"></div>
        <div style="background-color: burlywood;"></div>
    </div>
</div>
@code
{
    public DateTime filterStartDate = DateTime.Now;
    public DateTime filterEndDate = DateTime.Now;
}